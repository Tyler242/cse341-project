<!DOCTYPE html>
<html>
  <head>
    <% include ../includes/header.ejs %>
  </head>

  <body>
    <% include ../includes/nav.ejs %>
    <div class="jumbotron text-center">
      <div class="container">
        <h1><%= title %></h1>
      </div>
    </div>
    <div class="container">
      <form action="/ta02/addUser" method="POST">
        <label for="user">Add Username:</label><br />
        <input type="text" name="user" id="user" /><button type="submit">
          Add User
        </button>
      </form>
      <form action="/ta02/removeUser" method="POST">
        <label for="user">Remove Username:</label><br />
        <input type="text" name="user" id="user" /><button type="submit">
          Remove User
        </button>
      </form>
      <ul>
        <% for (user of usersList) {%>
        <li><%= user %></li>
        <% } %>
      </ul>
      <% if (canRemoveUser != true ) {%>
      <p>User is not in list</p>
      <% } %> <% if (duplicateUser) {%>
      <p>User is already in list</p>
      <% } %>
    </div>
  </body>
</html>
